<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_guide_layout">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/hanken_grotesk"
        android:textAlignment="center"
        android:textFontWeight="600"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Clock in and clock out"/>

    <ImageView
        android:id="@+id/video"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/dashboard"/>

    <LinearLayout
        android:id="@+id/information"
        android:layout_below="@+id/video"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/hanken_grotesk"
            android:text="To clock in and out of work:"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="   - Go to the home page."
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="   - At the top, you will find the 'Clock in'"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="     button if you haven't already done so."/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hanken_grotesk"
        android:layout_marginTop="5dp"
        android:text="   - After you clock in the button will be"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="     replaced to a clock out option."/>
</LinearLayout>


    <Button
        android:id="@+id/backGuide1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>