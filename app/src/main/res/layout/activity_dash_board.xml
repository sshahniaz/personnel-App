<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="350dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="112dp"
        app:cardBackgroundColor="@color/widgets"
        app:cardCornerRadius="30dp"
        app:cardElevation="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/shiftDay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/hanken_grotesk"
                android:shadowColor="#333333"
                android:shadowDx="-0.05"
                android:shadowDy="-0.05"
                android:shadowRadius="1"
                android:text="My next shift"
                android:textAlignment="center"
                android:textColor="#EFEFEF"
                android:textFontWeight="600"
                android:textSize="38sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="-20dp">

                <TextView
                    android:id="@+id/shiftStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-23dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:fontFamily="@font/hanken_grotesk"
                    android:shadowColor="#333333"
                    android:shadowDx="-0.05"
                    android:shadowDy="-0.05"
                    android:shadowRadius="1"
                    android:text="Start"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textFontWeight="900"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:layout_marginTop="-23dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/hanken_grotesk"
                    android:shadowColor="#333333"
                    android:shadowDx="-0.05"
                    android:shadowDy="-0.05"
                    android:shadowRadius="1"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textFontWeight="900"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/shiftEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-23dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/hanken_grotesk"
                    android:shadowColor="#333333"
                    android:shadowDx="-0.05"
                    android:shadowDy="-0.05"
                    android:shadowRadius="1"
                    android:text="End"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textFontWeight="900"
                    android:textSize="60sp" />


            </LinearLayout>

<!--<FrameLayout-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:id="@+id/buttonFragment"-->
<!--    android:orientation="vertical"-->
<!--    >-->


<!--</FrameLayout>-->
            <Button
                android:id="@+id/clockInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/accent"
                android:shadowColor="#434343"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Clock in"
                android:textSize="25sp"
                app:cornerRadius="8sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTime"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTime2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="30sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>