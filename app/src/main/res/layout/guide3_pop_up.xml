<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_guide_layout">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/hanken_grotesk"
        android:textAlignment="center"
        android:textFontWeight="600"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Book and review your leave"/>

    <ImageView
        android:id="@+id/video"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/holliday"/>

    <LinearLayout
        android:id="@+id/information"
        android:layout_below="@+id/video"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/hanken_grotesk"
            android:text="To book and review a leave:"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:layout_height="wrap_content"
            android:text="   - Go to the holiday page." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:layout_marginTop="5dp"
            android:text="   - Select leave type."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:layout_marginTop="5dp"
            android:text="   - Set the date range for your leave."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hanken_grotesk"
            android:text="   - (Optional) Type the reason."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hanken_grotesk"
            android:text="   - Click on the book button to finalize."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="   - Your booking should appear on top as"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="     'Pending'."
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:layout_marginTop="5dp"
            android:text="   - When reviewed by HR it will appear as "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hanken_grotesk"
            android:text="     'Approved' or 'Rejected'."/>
    </LinearLayout>

    <Button
        android:id="@+id/backGuide3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>