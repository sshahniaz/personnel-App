<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8882AAE3"
                android:endColor="#00F5FAFD"
                android:angle="270"
                />
            <corners android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#616263"
                />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="10dp"
        android:bottom="0dp">

        <shape android:shape="rectangle">
            <solid android:color="#82AAE3"/>
            <corners android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#616263"
                />
        </shape>
    </item>

</layer-list>